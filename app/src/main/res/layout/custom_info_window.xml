<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/marker_background_shape"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/info_apartment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아파트 이름"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/info_deal_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="25.07.19 / 15억 5,000"
        android:textColor="@color/design_default_color_primary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/info_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="전용 84.9㎡, 12층"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="클릭하여 10년간 거래내역 보기"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="12sp"
        android:textStyle="italic" />
</LinearLayout>
